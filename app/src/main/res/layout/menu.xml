<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/background"
    >

    <Button
        android:id="@+id/buttonStart"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="46dp"
        android:layout_marginStart="46dp"
        android:alpha="0.6"
        android:text="Start"
        android:textSize="30sp"
        android:layout_marginTop="49dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
    android:id="@+id/buttonHelp"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
        android:alpha="0.6"
        android:text="Help"
        android:textSize="30sp"
        android:layout_below="@+id/buttonStart"
        android:layout_alignLeft="@+id/buttonStart"
        android:layout_alignStart="@+id/buttonStart" />

    <Button
    android:id="@+id/buttonQuit"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
        android:alpha="0.6"
        android:text="Quit"
        android:textSize="30sp"
        android:layout_below="@+id/buttonHelp"
        android:layout_alignLeft="@+id/buttonHelp"
        android:layout_alignStart="@+id/buttonHelp" />

    <TextView
        android:id="@+id/highScores"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginRight="21dp"
        android:layout_marginEnd="21dp"
        android:layout_alignTop="@+id/buttonStart"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/buttonQuit" />

</RelativeLayout>
